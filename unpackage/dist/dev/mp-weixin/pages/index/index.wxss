
page{
	background-color:#eee;
}
.container{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.content {
	text-align: center;
	height: 400rpx;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
}
.product_list{
	padding-top: 8px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.list{
	background-color:#fff;
	margin-bottom:10px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	border-radius:7px;
	position: relative;

	/* height: 75px; */
}
.product_thumb{
	width:94px;
	height:94px;
	display: inline-block;
	position: relative;
}
.thumbimage{
	border-bottom-left-radius:7px;
	border-top-left-radius:7px;
	width:100%;
}
.product_info{
	display: inline-block;
	width:65%;
	margin-left: 8px;
	position: relative;
	font-size: 16px;
	font-weight:400;
	padding-top:14rpx;
	font-family: 'Avenir', Helvetica, Arial, sans-serif;
}
.product_title{
	width:100%;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp:2;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.product_price{
	color: #E5007F;
}
.addbtn{
	position: absolute;
	right: 0;
	top:35%;
	background-color:#000;
	color: #FFFFFF;
}

